# {{ ansible_managed }}

[Unit]
Description=ElasticSearch service
After=syslog.target
After=network.target

[Service]
Type=simple
User={{ system_user }}
Group={{ system_group }}

ExecStart={{ elasticsearch_system_user_home }}/bin/{{ elasticsearch_program_name }} {{ program_config_options|default('') }} --log-file={{ elasticsearch_log_directory }}/{{ elasticsearch_program_name }}.log

# Give a reasonable amount of time for the server to start up/shut down
TimeoutSec=300
Restart=on-failure
RestartSec=150

[Install]
WantedBy=multi-user.target
